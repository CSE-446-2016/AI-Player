<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shada"
    android:clickable="true"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/main_page_toolbar"
        layout="@layout/app_bar_layout"/>




    <TextView
        android:id="@+id/shakeToChangeSettingFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_page_toolbar"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Shake Mode"
        android:textColor="#212121"
        android:textSize="17sp" />

    <Switch
        android:id="@+id/switchShakeSettingFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_page_toolbar"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16sp"
        android:background="#212121" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@id/shakeToChangeSettingFrag"
        android:layout_margin="15dp"
        android:background="@color/colorLightGrey" />

    <TextView
        android:id="@+id/voiceEnableSettingFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shakeToChangeSettingFrag"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:text="Voice Enable Mode"
        android:textColor="#212121"
        android:textSize="17sp" />

    <Switch
        android:id="@+id/switchVoiceEnableSettingFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shakeToChangeSettingFrag"
        android:layout_marginTop="35dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16sp"
        android:background="#212121" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@id/switchVoiceEnableSettingFrag"
        android:layout_margin="15dp"
        android:background="@color/colorLightGrey" />

</RelativeLayout>